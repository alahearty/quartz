<ribbon:RibbonTab x:Class="quartz.application.reservoirs.Views.ReservoirRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:quartz.application.reservoirs.Views"
             xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
             mc:Ignorable="d" Header="Home"
             d:DesignHeight="450" d:DesignWidth="800">
    <ribbon:RibbonGroup Header="Data">
        <ribbon:RibbonButton LargeImageSource="../Images/Import.png" Label="Create Reservoir" Command="{Binding CreateReservoirCommand}" />
    </ribbon:RibbonGroup>
</ribbon:RibbonTab>
