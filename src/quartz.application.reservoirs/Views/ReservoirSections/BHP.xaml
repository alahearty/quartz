<UserControl x:Class="quartz.application.reservoirs.Views.ReservoirSections.BHP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <DataGrid Name="DG1" ItemsSource="{Binding BHP}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Pressure (psia)" Width="*" Binding="{Binding Pressure}"/>
                <DataGridTextColumn Header="Drainage Point" Width="*" Binding="{Binding DrainagePoint}" />
                <DataGridTextColumn Header="Source" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
